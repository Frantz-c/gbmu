
%include include.gbs

.memlock	_save_, 0xa000, end=0xa020
.var2		hp_save, _save_
.var1		lvl_save, _save_

.extern		_dec_hp
.extern		_inc_level

.bank	0, 0x150
call	_dec_hp
call	_inc_level

_save_data:
	ld	A,				(hp)
	ld	(hp_save),		A
	ld	A,				(hp + 1)
	ld	(hp_save + 1),	A
	ld	A,				(lvl)
	ld	(lvl),			A

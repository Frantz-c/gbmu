
%include include.gbs

;.extern		hp
;.extern		lvl

.bank		0, 0x170

_dec_hp:
	push	HL
	push	AF
	ld		A,			(hp)
	ld		H,			A
	ld		A,			(hp + 1)
	ld		L,			A
	dec		HL
	ld		A,			H
	ld		(hp),		A
	ld		A,			L
	ld		(hp + 1),	A
	pop		AF
	pop		HL	
	ret

_inc_level:
	push	AF
	ld		A,		(lvl)
	dec		A
	ld		(lvl),	A
	pop		AF
	ret
